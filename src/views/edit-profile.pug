extends base

block content
    form(method="POST", enctype="multipart/form-data").edit-profile__form
        label(for="avatar") Avatar
        input(name="avatar", id="avatar", type="file", accept="image/*")
        input(name="name",value=loggedInUser.name, type="text", required, placeholder="Name")
        if loggedInUser.socialOnly
            input(disabled, name="email", value=loggedInUser.email,type="email", required, placeholder="Email")
        else
            input(name="email", value=loggedInUser.email,type="email", required, placeholder="Email")
        input(name="username", value=loggedInUser.username,type="text", required, placeholder="Username")
        input(name="location", value=loggedInUser.location, type="text", required, placeholder="Location")
        input(type="submit", value="Update Profile")

        if !loggedInUser.socialOnly
            div.edit-profile__password
                a(href="change-password") Change Password &rarr; 
