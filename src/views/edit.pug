extends base.pug

block content 
    h5 Update Video
    form(method="POST")
        input(name="title", required, placeholder="Video Title", value=video.title)
        input(value=video.description, placeholder="Description", required, type="text", name="description", minlength=20)
        input(value=video.hashtags.join(), placeholder="Hashtags, separated by comma.", required, type="text", name="hashtags")
        input(value="Save", type="submit")